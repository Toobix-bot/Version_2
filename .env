# Toobix AI Assistant - Umgebungsvariablen
# Kopiere diese Datei zu .env und passe die Werte an

# === AI KONFIGURATION ===
# Ollama Einstellungen (lokal)
OLLAMA_MODEL=gemma2:2b
OLLAMA_URL=http://localhost:11434

# Groq Cloud API (optional - für komplexe Anfragen)
GROQ_API_KEY=dein_groq_api_key_hier
GROQ_MODEL=llama-3.1-70b-versatile

# Ab welcher Textlänge Cloud-KI verwenden (Zeichen)
CLOUD_THRESHOLD=800

# === SPRACH-KONFIGURATION ===
# Wake-Word für Aktivierung
WAKE_WORD=hey toobix

# Sprache für Erkennung (de-DE, en-US, etc.)
VOICE_LANGUAGE=de-DE

# Text-to-Speech Stimme und Geschwindigkeit
TTS_VOICE=de
TTS_RATE=200

# === GUI KONFIGURATION ===
# Fenstergröße
WINDOW_WIDTH=800
WINDOW_HEIGHT=600

# Theme (dark, light)
THEME=dark

# === SICHERHEIT ===
# Dateierstellung/-löschung erlauben
ENABLE_FILE_OPERATIONS=true

# Systemsteuerung erlauben (Programme öffnen/schließen)
ENABLE_SYSTEM_CONTROL=true

# Safe Mode (bestätigt gefährliche Aktionen)
SAFE_MODE=false

# === ERWEITERTE FEATURES ===
# Befehle automatisch ausführen ohne Nachfrage
AUTO_EXECUTE_COMMANDS=false

# Desktop-Benachrichtigungen anzeigen
SHOW_NOTIFICATIONS=true

# === LOGGING ===
# Log-Level (DEBUG, INFO, WARNING, ERROR)
LOG_LEVEL=INFO

# In Datei loggen
LOG_TO_FILE=false
